[Unit]
Description=HyprWhspr Voice Dictation Service
After=wayland-session@hyprland.desktop.target
Wants=wayland-session@hyprland.desktop.target

[Service]
Type=simple
ExecStartPre=/bin/sleep 2
ExecStart=/opt/hyprwhspr/bin/hyprwhspr
Restart=on-failure
RestartSec=5
WorkingDirectory=/opt/hyprwhspr
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=wayland-session@hyprland.desktop.target
